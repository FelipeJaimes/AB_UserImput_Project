<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ab_userinput_project.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"/>

        <EditText
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="8dp" />

        <TextView
            style="@style/HeaderTextStyle"
            android:background="#3F51B5"
            android:padding="8dp"
            android:text="1. Question"
            android:textColor="@android:color/white" />

        <RadioGroup
            android:id="@+id/radioGroup_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton_one_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="First Answer"
                android:textAlignment="textStart" />

            <RadioButton
                android:id="@+id/radioButton_two_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="Second Answer"
                android:textAlignment="textStart" />

            <RadioButton
                android:id="@+id/radioButton_three_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="Third Answer"
                android:textAlignment="textStart" />

        </RadioGroup>

        <TextView
            style="@style/HeaderTextStyle"
            android:background="#3F51B5"
            android:padding="8dp"
            android:text="2. Question"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkbox_one_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="First answer"
            android:textAlignment="textStart" />

        <CheckBox
            android:id="@+id/checkbox_two_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="Second answer"
            android:textAlignment="textStart" />

        <CheckBox
            android:id="@+id/checkbox_three_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="Third answer"
            android:textAlignment="textStart" />

        <TextView
            style="@style/HeaderTextStyle"
            android:background="#3F51B5"
            android:padding="8dp"
            android:text="3. Question"
            android:textColor="@android:color/white" />

        <NumberPicker
            android:id="@+id/numberPicker_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></NumberPicker>

        <TextView
            style="@style/HeaderTextStyle"
            android:background="#3F51B5"
            android:padding="8dp"
            android:text="4. Question"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/answer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:padding="8dp" />

        <Button
            android:id="@+id/completeButton_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Complete"
            android:onClick="submitAnswer"/>

    </LinearLayout>

</ScrollView>
